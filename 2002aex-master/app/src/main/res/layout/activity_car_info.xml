<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.test_kao.widget.MailLineView
        android:id="@+id/mail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/mail"
        app:layout_constraintBottom_toTopOf="@id/ccd"
        android:id="@+id/nes"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--   地址-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:textColor="#111"
            android:text="xxx"
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#111"
            android:text="北京市"
            android:layout_toRightOf="@id/add_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#111"
            android:text="默认"
            android:id="@+id/mo"
            android:layout_below="@id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#111"
            android:id="@+id/address"
            android:text="12345678"
            android:layout_below="@id/add_name"
            android:layout_toRightOf="@id/mo"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/add_right"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@mipmap/right" />
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_5"
            android:background="#E1DFDF"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#111"
            android:paddingVertical="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择优惠劵"/>
        <ImageView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/favourable_right"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textColor="#111"
            android:paddingVertical="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19张"
            android:layout_toLeftOf="@id/favourable_right"/>
    </RelativeLayout>
        <View
            android:background="#E1DFDF"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"/>
<!--        商品信息-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:paddingVertical="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品合计"
            android:textColor="#111"/>
        <TextView
            android:textColor="#111"
            android:id="@+id/allPrice"
            android:paddingVertical="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:background="#E1DFDF"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingVertical="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费"
                android:textColor="#111"/>
            <TextView
                android:textColor="#111"
                android:paddingVertical="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:background="#E1DFDF"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingVertical="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠劵"
                android:textColor="#111"/>
            <TextView
                android:textColor="#111"
                android:paddingVertical="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-￥0"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
        <View
            android:background="#E1DFDF"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
<!--        商品列表-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_CarInfo"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>
<!--    <View-->
<!--        -->
<!--        android:layout_marginTop="@dimen/dp_10"-->
<!--        android:background="#E1DFDF"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="8dp"/>-->
<!--    付款-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/payment"
        android:paddingVertical="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_50"
        android:text="实付"
        android:textSize="@dimen/dp_18"
        android:textColor="#ff00"/>
    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_50"
        android:text="去付款"
        android:background="#ff00"
       android:layout_alignParentRight="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>