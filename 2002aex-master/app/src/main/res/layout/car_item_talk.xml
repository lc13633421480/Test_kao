<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_can"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:textColor="#111"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/canAll_name"
        android:layout_toRightOf="@id/img_can"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#111"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/canAll_date"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#111"
        android:id="@+id/canAll_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/img_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/img_canAll"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/shop_sel"
        android:layout_below="@id/canAll_content"/>
</RelativeLayout>