<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_40">
        <ImageView
            android:id="@+id/img_no1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/shape_noselect"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_select1"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/shape_okselect"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/img_no2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/shape_noselect"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/img_select2"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/shape_okselect"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_no3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/shape_noselect"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/img_select3"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/shape_okselect"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>